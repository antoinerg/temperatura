<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperatura</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="conteiner">
        <div>
            <h2>Medidas de Temperatura</h2>
        </div>
        <div class="temp">
            <div class="temp-body">
                <div class="temp-1">
                    <div class="temp-header">
                        <h3>Termocupla 1</h3>
                    </div>
                    <div class="temp-conten">
                        <div class="last-temp">
                            <p>
                                <span id="Temperatura">
                                </span> ºC
                            </p>
                        </div>
                        <div>
                            <p> Temp min:</p>
                            <p><span id="Min"></span> ºC</p>
                            <p> Temp max:</p>
                            <p><span id="Max"></span> ºC</p>
                        </div>
                    </div>
                </div>
                <div class="temp-2">
                    <div class="temp-header">
                        <h3>Termocupla 2</h3>
                    </div>
                    <div class="temp-conten">
                        <div class="last-temp">
                            <p>
                                <span id="Temperatura-2">
                                </span> ºC
                            </p>
                        </div>
                        <div>
                            <p> Temp min:</p>
                            <p><span id="Min-2"></span> ºC</p>
                            <p> Temp max:</p>
                            <p><span id="Max-2"></span> ºC</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="chart">
        <div class="chart-header">
            <div id="line-chart"></div>
        </div>
        <div class="chart-footer">
        </div>
    </div>
</body>
<script type="text/javascript" src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/chart.js"></script>
<script>
    var socket = io();
    socket.on('data', function(data) {
        $("#Temperatura")[0].innerText = data;
    });
    socket.on('min', function(data) {
        $("#Min")[0].innerText = data;
    });
    socket.on('max', function(data) {
        $("#Max")[0].innerText = data;
    });
    socket.on('data-2', function(data) {
        $("#Temperatura-2")[0].innerText = data;
    });
    socket.on('min-2', function(data) {
        $("#Min-2")[0].innerText = data;
    });
    socket.on('max-2', function(data) {
        $("#Max-2")[0].innerText = data;
    });
</script>

</html>