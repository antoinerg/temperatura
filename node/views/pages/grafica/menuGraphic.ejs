<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graficas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="contenedor">
        <div class="nav">
            <%- include ("./../../partials/navegacion.ejs") %>
        </div>
        <div class="center-content">
            <h2>Cámaras Frigoríficas</h2>
            <div class="cards">
                <% data.forEach(camara => {%>
                    <div class="cam-layout">
                        <p>
                            <%= camara['nombre'] %>
                        </p>
                        <a class="logout btn btn-secondary" href="graphic/<%= camara['id'] %>">
                            Ver Gráfica
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

</body>

</html>