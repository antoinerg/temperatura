<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graficas - Temperatura</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include ("./../../partials/navegacion.ejs") %>
        <div class="page">
            <div class="conteiner">
                <div>
                    <h2>Medidas de Temperatura: Camara <span id="camara"><%= data[0]['camara']%></span> - Numero de Termocuplas: <span id="n_temp"><%= data.length %></span></h2>
                </div>
                <div>
                    <div class="temp-body">
                        <% for(var i=0; i < data.length; i++) {%>
                            <div class="temp temp-<%= i + 1 %>">
                                <div class="temp-header">
                                    <h3>Termocupla
                                        <%= i + 1 %>
                                    </h3>
                                </div>
                                <div class="temp-conten">
                                    <div class="last-temp">
                                        <p>
                                            <span id="Temperatura-<%= i + 1 %>"></span> ºC
                                        </p>
                                    </div>
                                    <div>
                                        <p> Temp min:</p>
                                        <p><span id="Min-<%= i + 1 %>"><%= data[i]['min_temperatura']%></span> ºC</p>
                                        <p> Temp max:</p>
                                        <p><span id="Max-<%= i + 1 %>"><%= data[i]['max_temperatura']%></span> ºC</p>
                                    </div>
                                </div>
                            </div>
                            <% }%>
                    </div>
                </div>
            </div>
            <div class="chart">
                <div class="chart-header">
                    <div id="line-chart"></div>
                </div>
                <div class="chart-footer">
                </div>
            </div>
        </div>
</body>
<script type="text/javascript" src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chart.js"></script>
<script>
    var socket = io('http://localhost:3000');
    var cam = parseInt($("#camara")[0].innerText);
    var num_tem = parseInt($("#n_temp")[0].innerText);
    socket.emit("camara", cam);

    for (let index = 1; index <= num_tem; index++) {
        socket.on('data-' + index, function(data) {
            $("#Temperatura-" + index)[0].innerText = data;
        });
    }
</script>

</html>